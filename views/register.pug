extends base

block content
    main.main
        .register-form
            h2.heading-secondary.ma-bt-lg Register A New Account
            form.form
            .form__group
                label.form__label(for="Firstname") Your first name
                input#email.form__input(type='email', placeholder='Please enter your first name', required)
                label.form__label(for="Surname") Your surname
                input#email.form__input(type='email', placeholder='Please enter your last name', required)
                label.form__label(for='email') Email address
                input#email.form__input(type='email', placeholder='you@example.com', required)
            .form__group.ma-bt-md
                label.form__label(for='password') Password
                input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group.ma-bt-md
                label.form__label(for='password') Confirm Password
                input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
            .form__group
                button.btn.btn--green Login
